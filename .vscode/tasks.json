                "-std=c++23", // std
                // "${file}",
                "${fileDirname}\\**.cpp", // all cpp files in same dir, wind
                // "${fileDirname}/**.cpp", // all cpp files in same dir, unix
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I.\\source\\includes",
                "-IC:\\Users\\User\\Desktop\\cpplibraries\\plog-master\\include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
