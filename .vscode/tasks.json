{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\Strawberry\\c\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-ggdb", // debug build
                // "-O2", // release build
                // "-DNDEBUG", // release build
                "-pedantic-errors", // turn off compiler extentions
                "-Wall",
                // "-Weffc++", // doesn't work with plog
                "-Wextra",
                "-Wshadow",
                // "-Wconversion", // doesn't work with plog
                // "-Wsign-conversion", // doesn't work with plog
